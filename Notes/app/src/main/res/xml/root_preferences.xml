<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:text="geral"
        android:textColor="@color/colorPrimaryDark"
        app:title="geral">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="allow_spam"
            android:title="allow spam" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_1"
            android:title="switch preference" />

        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            android:key="noteColor"
            android:title="note color"
            android:summary="pick a color"
            android:defaultValue="@color/noteDefaultColor"/>

        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            android:defaultValue="@color/textDefaultColor"
            android:key="textColor"
            android:summary="pick a color"
            android:title="text color"/>

        <ListPreference
            android:defaultValue="20"
            android:entries="@array/title_size"
            android:entryValues="@array/title_size"
            android:key="list_title_size"
            android:title="title preference" />
        <ListPreference
            android:defaultValue="12"
            android:entries="@array/desc_size"
            android:entryValues="@array/desc_size"
            android:key="list_desc_size"
            android:title="description preference" />

    </PreferenceCategory>

</PreferenceScreen>